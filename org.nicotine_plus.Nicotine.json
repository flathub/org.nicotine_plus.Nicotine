{
    "id": "org.nicotine_plus.Nicotine",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "nicotine",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=/media",
        "--filesystem=/mnt",
        "--filesystem=/run/media",
        "--talk-name=org.a11y.Bus",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.mpris.MediaPlayer2.*"
    ],
    "modules": [
        {
            "name": "nicotine-plus",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --no-deps --prefix=${FLATPAK_DEST} ."
            ],
            "post-install": [
                "for size in 16x16 16x16@2 24x24 24x24@2 32x32 32x32@2 48x48 48x48@2 64x64 64x64@2 128x128 128x128@2 256x256 256x256@2; do\n                    rsvg-convert -f png -o $size.png ${FLATPAK_DEST}/share/icons/hicolor/${size}/apps/${FLATPAK_ID}.svg\n                    install -Dm644 $size.png ${FLATPAK_DEST}/share/icons/hicolor/${size}/apps/${FLATPAK_ID}.png\n                    rm ${FLATPAK_DEST}/share/icons/hicolor/${size}/apps/${FLATPAK_ID}.svg\n                done"
            ],
            "sources": [
                {
                    "url": "https://files.pythonhosted.org/packages/5a/d3/a489967ab67165a6893f23e03c5134cf1b9cd35fd826c0a7c9ea3c743cb9/nicotine_plus-3.3.6.tar.gz",
                    "sha256": "6a0b39c5ff4fb4768689516a3a2cfe3aafdc568b5237f19553c51b1de712ee66",
                    "type": "archive",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "nicotine-plus"
                    }
                }
            ]
        }
    ]
}
