    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "nicotine",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=/media",
        "--filesystem=/mnt",
        "--filesystem=/run/media",
        "--talk-name=org.a11y.Bus",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.mpris.MediaPlayer2.*"
